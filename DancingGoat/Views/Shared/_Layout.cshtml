<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Dancing Goat</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="page-wrap">
        <header class="header" role="banner">
            <div class="menu">
                <div class="container">
                    <nav role="navigation">
                        <ul>
                            <li>
                                @Html.ActionLink(Localizer["Home"], "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink(Localizer["Store"], "Index", "Coffees")
                            </li>
                            <li>
                                @Html.ActionLink(Localizer["Articles"], "Index", "Articles")
                            </li>
                            <li>
                                @Html.ActionLink(Localizer["AboutUs"], "Index", "About")
                            </li>
                            <li>
                                @Html.ActionLink(Localizer["Cafes"], "Index", "Cafes")
                            </li>
                            <li>
                                @Html.ActionLink(Localizer["Contact"], "Index", "Contacts")
                            </li>
                            <li>
                                @Html.ActionLink(Localizer["Partnership"], "Index", "Partnership")
                            </li>
                        </ul>
                    </nav>
                    <div class="additional-menu-buttons user-menu">
                        <nav role="navigation">
                            <ul class="dropdown-items-list dropdown-desktop-visible">
                                <li>
                                    <a asp-controller="Languagues" asp-action="ChangeLanguage" asp-route-culture="en-US">English</a> |
                                </li>
                                <li>
                                    <a asp-controller="Languagues" asp-action="ChangeLanguage" asp-route-culture="es-ES">Spanish</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div id="message-box" class="container message">
                <partial name="~/Areas/Admin/Views/Shared/_MessagesPartial.cshtml" />
            </div>
            <div class="header-row">
                <div class="container">
                    <div class="col-xs-8 col-md-8 col-lg-4 logo">
                        <h1 class="logo">
                            @Html.ActionLink("Dancing Goat", "Index", new { controller = "Home" }, new { @class = "logo-link" })
                        </h1>
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <div class="footer-wrapper">
        <footer role="contentinfo">
            <div class="footer-container">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-lg-4 footer-col">
                            <p>
                                @await Component.InvokeAsync("CompanyAddress")
                            </p>
                        </div>
                        <div class="col-md-4 col-lg-4 footer-col">
                            <h3>@Localizer["FollowUs.Title"]</h3>
                            <a class="followus-link" href="https://www.facebook.com/Dancing.Goat" target="_blank">
                                <img alt="@Localizer["FollowUsOnFacebook"]" class="" src="~/images/facebook-icon.png" title="@Localizer["FollowUsOnFacebook"]">
                            </a>
                            <a class="followus-link" href="https://twitter.com/DancingGoat78" target="_blank">
                                <img alt="@Localizer["FollowUsOnTwitter"]" class="" src="~/images/twitter-icon.png" title="@Localizer["FollowUsOnTwitter"]">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container copyright">
                Copyright &copy; @DateTime.Now.Year Dancing Goat. All rights reserved.
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        function toggleEditMode(isChecked) {
            const body = document.getElementsByTagName('body')[0];
            isChecked ? body.classList.add('edit-mode') : body.classList.remove('edit-mode');
        }
    </script>
</body>
</html>
