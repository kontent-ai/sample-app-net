@model DancingGoat.Models.Product

@{
    var image = Model.ProductImage.FirstOrDefault();
    var status = Model.ProductProductStatus.FirstOrDefault()?.Name;
    var price = Model.ProductPrice.HasValue ? Model.ProductPrice.Value.ToString("C") : "Price hasn't been set yet.";
}

<article class="product-tile">
    <a href="@Url.Action("Detail", "Product", new {urlSlug = Model.ProductUrlPattern})">
        <h1 class="product-heading">@Model.ProductSystem.Name</h1>
        @if (status != null)
        {
            <span class="product-tile-status">
                @Html.DisplayFor(vm => status)
            </span>
        }
        <figure class="product-tile-image">
            @Html.AssetImage(image, title:image?.Name, width:452, height:452)
        </figure>
        <div class="product-tile-info">
            <span class="product-tile-price">
                @price
            </span>
        </div>
    </a>
</article>