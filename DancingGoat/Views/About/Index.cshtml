@model KenticoCloud.Delivery.ContentItem

@{
    ViewBag.Title = Resources.DancingGoat.AboutUs;
    int i = 0;
}

@foreach (var aboutSection in @Model.GetModularContent("facts"))
{
    <section class="row text-and-image">
        <h2 class="col-lg-12">@aboutSection.GetString("title")</h2>
        @if (i++ % 2 == 0)
        {
            <div class="col-md-6">
                <div class="text-and-image-text">
                    @Html.Raw(@aboutSection.GetString("description"))
                </div>
            </div>
            <div class="col-md-6">
                <img src="@aboutSection.GetAssets("image").First().Url" class="img-responsive" alt="@aboutSection.GetString("title")" />
            </div>
        }
        else
        {
            <div class="col-md-6 col-md-push-6">
                <div class="text-and-image-text-right">
                    @Html.Raw(@aboutSection.GetString("description"))
                </div>
            </div>
            <div class="col-md-6 col-md-pull-6">
                <img src="@aboutSection.GetAssets("image").First().Url" class="img-responsive" alt="@aboutSection.GetString("title")" />
            </div>
        }
    </section>
}